#!/bin/bash

export MSYS_NO_PATHCONV=1

if [[ "$@" == "stop" ]]; then
  docker-compose down
else
  # This order is so that we can launch the databases and let them live beyond
  # any given test run.

  # This is idempotent, so do it every time.
  docker-compose up -d datastores

  # This runs the tests
  docker-compose up code
fi
