load_sims version --version
load_sims help --help (generic help)

CMD = load | validate | drivers
load_sims CMD --help
load_sims CMD \
  --driver <DBD name> \
  [--username|u <username> \ ]
  [--password|P <password> \ ]
  [--port|p <port> \ ]
  [--database|d <database name> \ ]
  [--constraints <filename> \ ]
  [--toposort <filename> \ ]
  [--model <filename> \ ]
  [--seed <seed> ]
  --host|h <host> \ (if --driver=sqlite, this is the filename)
  --specification|s <filename> \
  [--outfile <filename> \]
