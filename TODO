load_sims version --version
load_sims help --help (generic help)

CMD = load | validate | drivers
load_sims CMD --help
load_sims CMD \
  --username|u <username> \
  --password|P <password> \
  --host|h <host> \
  --port|p <port> \
  --driver <DBD name> \
  --database|d <database name> \
  --specification|s <filename> \
  --constraints <filename> \
  --toposort <filename> \
  --model <filename> \
  --outfile <filename> \
  --seed <seed>
